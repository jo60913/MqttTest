<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btn_main_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="連線"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_main_layout"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_main_connect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_main_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_main_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="訂閱"
            app:layout_constraintStart_toEndOf="@+id/til_main_layout"
            app:layout_constraintTop_toTopOf="@+id/til_main_layout"
            app:layout_constraintBottom_toBottomOf="@+id/til_main_layout"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_main_emit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="發送"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/btn_main_subscribe"
            app:layout_constraintEnd_toEndOf="@+id/btn_main_subscribe"
            app:layout_constraintTop_toBottomOf="@+id/btn_main_subscribe"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>